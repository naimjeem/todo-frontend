# API Configuration
REACT_APP_API_URL=http://localhost:5000

# Feature Flags
# Set to 'true' to enable features, 'false' to disable
REACT_APP_ENABLE_PRIORITY=false
REACT_APP_ENABLE_DARK_MODE=false
REACT_APP_ENABLE_NOTIFICATIONS=false
REACT_APP_ENABLE_CATEGORIES=false
REACT_APP_ENABLE_ADVANCED_FILTERING=false
REACT_APP_ENABLE_ATTACHMENTS=false
REACT_APP_ENABLE_COLLABORATIVE_EDITING=false
REACT_APP_ENABLE_ANALYTICS=false

# Development Settings
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=info

# Analytics (if enabled)
REACT_APP_ANALYTICS_ID=your-analytics-id
REACT_APP_ANALYTICS_ENDPOINT=https://analytics.example.com

# Feature Flag Service (optional)
REACT_APP_FEATURE_FLAG_SERVICE_URL=https://flags.example.com
REACT_APP_FEATURE_FLAG_API_KEY=your-api-key
